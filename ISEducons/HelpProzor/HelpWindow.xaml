<Window x:Class="ISEducons.HelpWindow.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISEducons.HelpProzor"
        mc:Ignorable="d"
        Title="HelpWindow" Height="580" Width="930" WindowStyle="None" WindowStartupLocation="CenterScreen" MinHeight="500" MinWidth="900"  ResizeMode="CanResizeWithGrip" AllowsTransparency="True" MouseLeftButtonDown="WindowMouseLeftButtonDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="24*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="515*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>

        <Button x:Name="cancelButton" Style="{DynamicResource MaterialDesignRaisedDarkButton}"  BorderThickness="0" Grid.Row="1" ToolTip="Odustani od izmena" Height="Auto" Margin="10,10,10,0" Grid.Column="2" 
                Click="cancelButton_Click">
            Zatvori
        </Button>


    </Grid>
</Window>
